<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:label="SecurityCam"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Especifica um tema Android para aplicar a esta Activity assim que
                 o processo Android foi iniciado. Este tema é visível para o usuário
                 enquanto a UI do Flutter está sendo inicializada. Após isso, este tema continua
                 a determinar o plano de fundo da Janela atrás da UI do Flutter. -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- Não exclua os meta-dados abaixo.
             Isso é usado pela ferramenta Flutter para gerar GeneratedPluginRegistrant.java -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

    </application>

</manifest>
